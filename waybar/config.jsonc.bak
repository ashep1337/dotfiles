{
  "layer": "top",
  "position": "top",
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["clock"],
  "modules-right": ["pulseaudio", "battery", "network", "bluetooth", "tray"],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "󰎤", "2": "", "3": "", "4": "", "5": ""
    }
  },

  "clock": {
    "format": " {:%H:%M}  {:%Y-%m-%d}"
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-icons": {
      "default": ["", "", ""]
    },
    "scroll-step": 5
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip": true
  },

  "network": {
    "format-wifi": "  {essid}",
    "format-ethernet": "  {ifname}",
    "format-disconnected": "󰖪  Offline",
    "tooltip": true
  },

  "bluetooth": {
    "format-on": "",
    "format-off": "",
    "tooltip": true
  },

  "tray": {
    "icon-size": 16,
    "spacing": 10
  }
}

