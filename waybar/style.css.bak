* {
  font-family: "JetBrainsMono Nerd Font", monospace;
  font-size: 14px;
  color: #ffffff;
}

window#waybar {
  background: rgba(30, 30, 46, 0.9);
  border-bottom: 2px solid #89b4fa;
  padding: 4px 10px;
}

#workspaces button {
  padding: 0 8px;
  background: transparent;
  color: #cdd6f4;
  border: none;
}

#workspaces button.active {
  background: #89b4fa;
  color: #1e1e2e;
  border-radius: 5px;
}

#clock,
#pulseaudio,
#battery,
#network,
#bluetooth,
#tray {
  margin: 0 8px;
  padding: 0 6px;
  border-radius: 5px;
  background-color: #313244;
}

